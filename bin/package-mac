#!/bin/sh

platypus -B -o "None" --name "CryptoPunks GUI" -i "icons/cryptopunks-gui.icns" -u "Andy Maleh" -V "1.0.0" -I "org.andymaleh.CryptoPunksGUI" -f "$(pwd)|$(dirname $(dirname $(which ruby)))|$(dirname $(dirname $(dirname $(dirname $(gem which glimmer)))))" $(realpath "bin/cryptopunks-mac-gui") -y "/Applications/CryptoPunks GUI.app"
